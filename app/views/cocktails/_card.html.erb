<div class="card-cocktail">
  <h2 class="second-title">
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </h2>
  <p>
    <%= link_to "Edit this cocktail", edit_cocktail_path(cocktail) %>
  </p>
  <p>
    <%= link_to "Delete this cocktail", cocktail_path(cocktail),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this cocktail?" } %>
  </p>
</div>

