<h1 class="main-title">Cocktails</h1>
<div class="container">
  <h3><%= link_to 'New Cocktail', new_cocktail_path %></h3>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <%= render 'card', cocktail: cocktail %>
    </div>
    <% end %>
  </div>
</div>
